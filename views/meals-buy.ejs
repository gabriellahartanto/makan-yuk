<%- include('partials/header') %>
<%- include('partials/not-home', { title: 'Buy Meal' }) %>
<div class="container">
  <form action="/meals/<%= data.id %>/buy" method="POST">
    <h4><%= data.name %></h4>
    <div>
      <label>Amount</label><br>
      <input type="number" name="amount">
    </div>
    <div>
      <label>Stock Available</label>
      <p><%= data.stock %></p>
      <%= errors %>
    </div>
    <div>
      <label>Price</label><br>
      <p><%= data.price %></p>
    </div>
    <button type="submit">Buy</button>
  </form>
</div>
<%- include('partials/footer') %>