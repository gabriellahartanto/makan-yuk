<%- include('partials/header') %>
<%- include('partials/not-home', { title: 'Student Meals' }) %>
  <div class="container">
    <table class="table table-hover">
      <tr>
        <th>No</th>
        <th>Student</th>
        <th>Meal</th>
        <th>Amount</th>
        <th>Checklist</th>
        <th>Action</th>
      </tr>
      <% for (let i = 0; i < data.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= data[i].name %></td>
          <td><%= data[i].price %></td>
          <td><%= data[i].stock %></td>
          <td><a href="/meals/<%= data[i].id %>/qrcode"><button class="btn">Order</button></a></td>
        </tr>
      <% } %>
    </table>
  </div>
  <%- include('partials/footer') %>