<%- include('partials/header') %>
<%- include('partials/not-home', { title: 'Meals' }) %>
  <div class="container">
    <p><a href="/meals/add"><button class="btn btn-primary">Add Meal</button></a> <a href="/meals/empty"><button class="btn btn-warning">Stock Empty</button></a></p>
    <p><a href="/students/topup"><button class="btn btn-success">Top-Up Money</button></a></p>
    <p><a href="/staffs/see">See Student Orders</a></p>
    <% if (student) { %>
      <h2><%= student.username %>'s balance: <%= !student.money ? '' : toRupiah(student.money)%></h2>
    <% } %>
  </div>
  <br>
  <div class="container" style="margin-bottom: 100px">
    <table class="table table-hover">
      <tr>
        <th>No</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>QR Code</th>
      </tr>
      <% for (let i = 0; i < data.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= data[i].name %></td>
          <td><%= data[i].price %></td>
          <td><%= data[i].stock %></td>
          <td><a href="/meals/<%= data[i].id %>/qrcode"><button class="btn">Order</button></a></td>
        </tr>
      <% } %>
    </table> 
  </div>
  <%- include('partials/footer') %>